<h1>Add a New Car</h1>
<hr>
<%= simple_form_for(@car) do |f| %>
  <%= f.input :model %>
  <%= f.input :color %>
  <%= f.input :year %>
  <%= f.input :price %>
  <%= f.input :location %>
  <%= f.input :photo, input_html: { class: "hidden" } %>
  <%= f.submit class: "btn-flat btn-flat:hover" %>
<% end %>
